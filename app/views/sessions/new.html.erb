<% provide(:title, 'Sign in') %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <span class="glyphicon glyphicon-lock"></span> Login</div>
          <div class="panel-body">
            <%= form_for(:session, url: login_path,html: {class: 'form-horizontal', role: 'form'}) do |f| %>
              <div class="form-group">
                <%= f.label :email, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= f.email_field :email, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :password, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= f.password_field :password, class: "form-control" %>
                </div>
              </div>
              <div class="form-group last">
                <div class="col-sm-offset-3 col-sm-9">
                  <%= f.submit "Log in", class: "btn btn-success btn-sm" %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="panel-footer">
            Not Registred? <a href="<%= new_user_path %>">Register here</a></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>