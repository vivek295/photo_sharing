<div class = 'modal-dialog'>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <span class="fa fa-upload"></span> 
          Post 
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        </div>
          <div class="panel-body">
            <%= form_for(@post, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
              <div class="form-group">
                <%= f.label :image_url, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= f.file_field :image_url, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :caption, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= f.text_area :caption, class: "form-control" %>
                </div>
              </div>
              <div class="form-group last">
                <div class="col-sm-offset-3 col-sm-9">
                  <%= f.submit "Post", class: "btn btn-success btn-sm" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>